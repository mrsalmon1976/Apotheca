@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
@using Apotheca.Navigation
@model Apotheca.ViewModels.Category.CategoryViewModel
@{
    Layout = "Content/Layouts/MainLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Maintain Categories</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div id="category-list"></div>
        <button id="btn-add" class="btn btn-primary pull-left">Add Category</button>
    </div>
</div>
<div class="modal fade" id="dlg-add" tabindex="-1" role="dialog" aria-labelledby="dlg-title">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="dlg-title">Add Category</h4>
      </div>
      <div class="modal-body">
        <div id="msg-error" class="alert alert-danger hidden" role="alert">An error occurred.</div>
        <form>
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Name" maxlength="100">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input type="text" class="form-control" id="description" name="description" placeholder="Description" maxlength="255">
            </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button id="btn-submit" type="button" class="btn btn-primary">Add category</button>
      </div>
    </div>
  </div>
</div>
