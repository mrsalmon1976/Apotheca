@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
@using Apotheca.Navigation
@model Apotheca.ViewModels.Document.DocumentViewModel
@{
    Layout = "Content/Layouts/MainLayout.cshtml";
}
<script language="javascript" type="text/javascript">
    // $("div#fileDropZone").dropzone({ url: "/file/post" })
</script>
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Add a Document</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-8"
        <form role="form" method="post" action="@Actions.Document.Add">
            <fieldset>
                <div class="form-group">
                    <label>Name</label>
                    <input class="form-control" placeholder="Name" name="name" type="text" value="@Model.DocumentName" autofocus="autofocus" />
                    <p class="help-block">This is the name you use to refer to the document.</p>
                </div>
                <div class="form-group">
                    <label>Details</label>
                    <input class="form-control" placeholder="Details" name="details" type="text" value="@Model.DocumentDetails">
                    <p class="help-block">Provide some details about this document that may help others.  Or don't.</p>
                </div>
                <div id="fileDropZone">

                </div>
                <button type="submit" class="btn btn-lg btn-primary btn-block">Add document</button>
            </fieldset>
        </form>
    </div>
</div>
