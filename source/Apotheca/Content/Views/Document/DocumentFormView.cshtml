@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
@using Apotheca.Navigation
@model Apotheca.ViewModels.Document.DocumentViewModel
@{
    Layout = "Content/Layouts/MainLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Add a Document</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-8">
        <form role="form" method="post" action="@Actions.Document.Add">
            <fieldset>
                <div class="form-group">
                    <label>Document</label>
                    <div id="dropzone" class="dropzone">

                    </div>
                </div>
                <div class="form-group">
                    <label>File Name</label>
                    <input id="txt-name" class="form-control" placeholder="Name" name="FileName" type="text" value="@Model.FileName" readonly="readonly" />
                    <p class="help-block">The file name (this will automatically populate once the file has been uploaded).</p>
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <input class="form-control" placeholder="Description" name="Description" type="text" value="@Model.Description">
                    <p class="help-block">Provide some details about this document that may help others.  Or don't.</p>
                </div>
                <input type="hidden" id="hid-filename" name="UploadedFileName" value="" />
                <button id="btn-submit-document" type="submit" class="btn btn-lg btn-primary btn-block" disabled="disabled">Add document</button>
            </fieldset>
        </form>
    </div>
</div>
