@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
@using Apotheca.Navigation
@model Apotheca.ViewModels.Dashboard.DashboardViewModel
@{
    // See here for layout examples: /lib/startbootstrap-sb-admin-2-1.0.8/pages
    Layout = "Content/Layouts/MainLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Dashboard</h1>
    </div>
</div>
<div class="row">
    @if (ViewBag.IsAdmin)
    { 
        <div class="col-lg-3 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-user fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">@Model.UserCount</div>
                            <div>User@(Model.UserCount == 1 ? "" : "s")</div>
                        </div>
                    </div>
                </div>
                <a href="@Actions.User.Default">
                    <div class="panel-footer">
                        <span class="pull-left">Add new user</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
    }
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-file-text fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@Model.DocumentCount</div>
                        <div>Document@(Model.DocumentCount == 1 ? "" : "s")</div>
                    </div>
                </div>
            </div>
            <a href="@Actions.Document.Add">
                <div class="panel-footer">
                    <span class="pull-left">Add new document</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
</div>
